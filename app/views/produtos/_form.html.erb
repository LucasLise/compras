<%= simple_form_for @produto do |f| %>

  <%= f.input :descricao %>
  <%= f.input :preco, input_html: {min:'0'} %>
  <%= f.input :quantidade, input_html: {min:'0'} %>
  <%= f.association :categoria %>
  <%= f.input :imagem, as: :file %><br/>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                produtos_path, :class => 'btn btn-default' %>
<% end %>
