<%- model_class = Produto -%>
<div class="row">
  <div class="col-md-6">
    <h3><%= action_list(Produto) %></h3>
  </div>
  <div class="col-md-6" align="right">
    <h3><%= link_to action_new(Produto), new_produto_path, class: 'btn btn-info btn-xs' %></h3>
  </div>
</div><hr>
<table class="table table-striped">
  <thead>
    <tr>
      <th class="text-center"><%= model_class.human_attribute_name(:descricao) %></th>
      <th class="text-center"><%= model_class.human_attribute_name(:preco) %></th>
      <th class="text-center"><%= model_class.human_attribute_name(:created_at) %></th>
      <th class="text-center"><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td class="text-center"><%= produto.descricao %></td>
        <td class="text-center"><%= produto.preco %></td>
        <td class="text-center"><%= l produto.created_at %></td>
        <td class="text-center">
          <%= link_icon_to_show(produto_path(produto)) %>
          <%= link_icon_to_edit(edit_produto_path(produto)) %>
          <%= link_icon_to_destroy(produto_path(produto)) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
