<%- model_class = Produto -%>

<div class="row">
  <div class="col-md-6">
    <h3><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h3>
  </div>
  <div class="col-md-6" align="right">
    <%= link_to 'New', new_produto_path, class: 'btn btn-info'%>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:descricao) %></th>
      <th><%= model_class.human_attribute_name(:preco) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= image_tag(produto.imagem.url(:thumb))%></td>
        <td><%= link_to produto.id, produto_path(produto) %></td>
        <td><%= produto.descricao %></td>
        <td><%= produto.preco %></td>
        <td><%=l produto.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      produto_path(produto), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_produto_path(produto), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      produto_path(produto),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
