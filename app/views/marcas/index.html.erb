<%- model_class = Marca -%>
<div class="row">
  <div class="col-md-6">
    <h3><%= action_list Marca %></h3>
  </div>
  <div class="col-md-6" align="right">
  <h3><%= link_to action_new_fem(Marca), new_marca_path, class: 'btn btn-info btn-xs'%></h3>
  </div>
</div><hr>
<table class="table table-striped">
  <thead>
    <tr>
      <th class="text-center"><%= model_class.human_attribute_name(:descricao) %></th>
      <th class="text-center"><%= model_class.human_attribute_name(:created_at) %></th>
      <th class="text-center"><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @marcas.each do |marca| %>
      <tr>
        <td class="text-center"><%= marca.descricao %></td>
        <td class="text-center"><%=l marca.created_at %></td>
        <td class="text-center">
          <%= link_icon_to_show(marca_path marca) %>
          <%= link_icon_to_edit(edit_marca_path marca) %>
          <%= link_icon_to_destroy(marca_path marca) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= index_footer @marcas %>
