<div id="carousel" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <img src="http://www.vendermeucelular.com.br/wp-content/uploads/2016/05/smartphone.jpg" style="width: 100%; height: 335px">
    </div>
    <div class="item">
      <img src="http://c.mlcdn.com.br/1500x1500/notebook-dell-inspiron-i15-7559-a10-gamingedition-intel-core-i5-8gb-1tb-15-6-34-windows-10-216273200.jpg" style="height: 335px; width: 100%">
    </div>
  </div>

  <a class="left carousel-control" href="#carousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#carousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div><br>

<div class="row panel panel-info">
  <div class="panel-heading">
    <div class="row">
      <div class="col-md-12">
        <div class="navbar-form navbar-left" >
          <%= search_form_for @q, remote: true, url: galeria_index_path do |f| %>
            <%= f.search_field :descricao_cont, placeholder: 'Pesquisar Produto', class: 'form-control', style: "min-width: 596px"%>
            <button type="submit" class="btn btn-info">Pesquisar</button>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <h5>Categorias</h5>
        <% todas_categorias.each do |categoria| %>
            <a class="label label-danger categorias" data-id="<%= categoria.id %>" ><%= categoria.descricao %></a>
        <% end %>
      </div>
      <div class="col-md-4">
        <h5>Marcas</h5>
        <% todas_marcas.each do |marca| %>
            <a class="label label-danger marcas" data-id="<%= marca.id %>" ><%= marca.descricao %></a>
        <% end %>
      </div>
      <div class="col-md-4">
        <div align="right">
          <h5>Ordenar por:</h5>
          <%= select_tag "ordenacao",
            raw("<option value='crescente'>Menor Preço</option><option value='decrescente'>Maior Preço</option>"), include_blank: "Todos", class: 'btn btn-info'%>
        </div>
      </div>
    </div>
  </div>
  <div class="panel-body" align='center' id='produtos'>
    <%= render partial:'produtos'%>
  </div>
  <div align="center">
    <%= will_paginate @produtos, renderer: BootstrapPagination::Rails%>
  </div>
</div>
