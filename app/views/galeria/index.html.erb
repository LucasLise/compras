<div class="row">
  <div id="carousel" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner" role="listbox">
      <div class="item active">
        <img src="https://whathipster.files.wordpress.com/2011/05/cropped-adidas_originals_logo_by_syntheticbloob.jpg" style="width: 100%; height: 335px">
      </div>
      <div class="item">
        <img src="http://comprenomundo.com/image/cache/data/nike-1000x300.jpg" style="height: 335px; width: 100%">
      </div>
    </div>

    <a class="left carousel-control" href="#carousel" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#carousel" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div><br>

  <div class="row" align="right">
    <div class="col-md-9">
      <form class="navbar-form navbar-left">
        <div class="form-group">
          <%= search_form_for @q, remote: true, url: galeria_index_path do |f| %>
            <%= f.search_field :descricao_cont, placeholder: 'Pesquisar Produto', class: 'form-control', style: "" %>
            <% end %>
            <button type="submit" class="btn btn-default">Pesquisar</button>
        </div>
      </form>
   </div>

    <div class="col-md-3">
          <%= select_tag "ordenacao", raw("<option value='crescente'>Menor Preço</option><option value='decrescente'>Maior Preço</option>"),
                                      include_blank: "Todos", class: 'btn btn-default', style: 'background-color: #777777; margin-top: 10px'%>
    </div>
  </div>

  <div class="col-md-3 well" style="margin-top: 15px;">
    <div class="row">
      <h4><strong>Categorias:</strong></h4>
        <% todas_categorias.each do |categoria| %>
        <div class="col-md-12">
          <a class="label label-default categorias" data-id="<%= categoria.id %>" ><%= categoria.descricao %></a>
        </div>
        <% end %>
    </div>
    <div class="row">
      <h4><strong>Marcas:</strong></h4>
        <% todas_marcas.each do |marca| %>
        <div class="col-md-12">
            <a class="label label-default marcas" data-id="<%= marca.id %>" ><%= marca.descricao %></a>
        </div>
        <% end %>
    </div>
  </div>


  <div class="col-md-9">
    <div class="row">
      <div class="panel-body" align='center' id='produtos'>
        <%= render partial:'produtos'%>
      </div>
      <div align="center">
        <%= will_paginate @produtos, renderer: BootstrapPagination::Rails%>
      </div>
    </div>
  </div>
</div>
