<div class="progress">
  <div class="progress-bar progress-bar-success progress-bar-striped" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 75%">
    <span class="sr-only">40% Complete (success)</span>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <h1>Pedido</h1><hr>
    <%= render 'carrinhos/carrinhos' %>
    <div align="right">
      <h3 style="display: inline-block"><span class="label label-default">Total: <%= number_to_currency valor_total %></span></h3>
    </div>
  </div>

  <div class="col-md-6">
    <span id="formulario_endereco">
      <%if current_user.enderecos.count > 0%>
          <div class="row">
            <div class="col-md-9">
              <h1>Endereço</h1>
            </div>
            <div class="col-md-3">
              <h1>
                <%= link_to 'Novo Endereço', new_endereco_path, remote: true, class: "btn btn-primary", id: "novo_endereco" %>
              </h1>
            </div>
          </div>
          <hr><%= render 'enderecos/ultimos_enderecos'%>
      <%else%>
          <%= render 'form', endereco: @endereco %>
      <%end%>
    </div>
  </span>
</div>
