<p id="notice"><%= notice %></p>

<h1>Itens Pedido</h1>

<table>
  <thead>
    <tr>
      <th>Pedido</th>
      <th>Produto</th>
      <th>Quantidade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @itens_pedido.each do |item_pedido| %>
      <tr>
        <td><%= item_pedido.pedido %></td>
        <td><%= item_pedido.produto %></td>
        <td><%= item_pedido.quantidade %></td>
        <td><%= link_to 'Show', item_pedido %></td>
        <td><%= link_to 'Edit', edit_item_pedido_path(item_pedido) %></td>
        <td><%= link_to 'Destroy', item_pedido, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

