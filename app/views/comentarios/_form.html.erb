<div id="contact-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= simple_form_for([@produto, @produto.comentarios.new], remote: true) do |f| %>
      <div class="modal-body">
        <h1 align="center"><strong>Sua Avaliação</strong></h1><hr>
        <div class="row">
          <div class="form-inputs col-md-12">
            <%= f.text_area :descricao, class: 'descricao_comentario', placeholder: 'Descreva oque você achou desse produto...'%>
          </div>
        </div>
        <div class="form-actions botao_comentario" align="right">
          <%= f.button :submit, 'Enviar' %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
