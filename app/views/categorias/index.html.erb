<%- model_class = Categoria -%>
<div class="row">
  <div class="col-md-6">
    <h3><%= action_list(Categoria) %></h3>
  </div>
  <div class="col-md-6" align="right">
    <h3><%= link_to action_new_fem(Categoria), new_categoria_path, class: 'btn btn-info btn-xs'%></h3>
  </div>
</div><hr>
<table class="table table-striped">
  <thead>
    <tr>
      <th class="text-center"><%= model_class.human_attribute_name(:descricao) %></th>
      <th class="text-center"><%= model_class.human_attribute_name(:created_at) %></th>
      <th class="text-center"><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @categorias.each do |categoria| %>
      <tr>
        <td class="text-center"><%= categoria.descricao %></td>
        <td class="text-center"><%=l categoria.created_at %></td>
        <td class="text-center">
          <%= link_icon_to_show(categoria_path(categoria)) %>
          <%= link_icon_to_edit(edit_categoria_path(categoria)) %>
          <%= link_icon_to_destroy(categoria_path(categoria)) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
