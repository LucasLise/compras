<% if carrinho_atual.itens_carrinho.count > 0 %>
  <div align="center">
      Progresso
  </div>
  <div class="progress">
      <div class="progress-bar progress-bar-success progress-bar-striped" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 50%">
          <span class="sr-only">40% Complete (success)</span>
      </div>
  </div>
<%end%>

<div id="carrinho">
    <%= render 'carrinhos'%>
    <div align="right">
        <%if carrinho_atual.itens_carrinho.count > 0%>
        <%= link_to 'Confirmar endereço', new_endereco_path, class: 'btn btn-info'%>
        <%else%>
        <a href="/galeria">
            <h5 align="center">
                <strong style="color: cadetblue;">Você não possui produtos em seu carrinho, navegue em nossa loja e encontre!</strong>
            </h5>
        </a>
        <%end%>
        <h3 style="display: inline-block">
            <span class="label label-default">Total:
                <%= number_to_currency valor_total %></span>
        </h3>
    </div>
</div>
